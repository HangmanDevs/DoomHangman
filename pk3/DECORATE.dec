actor EndMenu: Inventory
{
    inventory.amount 1
    inventory.maxamount 1
    +UNDROPPABLE
}

actor NoPull: CustomInventory
{
    States
    {
      Pickup:
        TNT1 A 0 A_ChangeFlag("WINDTHRUST", 0)
        stop
    }
}

actor YesPull: CustomInventory
{
    States
    {
      Pickup:
        TNT1 A 0 A_ChangeFlag("WINDTHRUST", 1)
        stop
    }
}

